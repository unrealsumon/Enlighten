
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_MainLayout.cshtml";
}
<script src="~/Contents/scripts/Controllers/GodownController.js"></script>
<div class="row" ng-controller="GodownController as vm">
    <div class="col-md-12">

        <div class="card card-plain">
            <div class="card-header card-header-tabs card-header-info  ">
                <div class="nav-tabs-navigation">
                    <div class="nav-tabs-wrapper">
                        <span class="nav-tabs-title"></span>
                        <ul class="nav nav-tabs" data-tabs="tabs">
                            <li class="nav-item" ng-click="vm.ToggleTab(1)">
                                <a class="nav-link {{vm.tab1}} " href="#i_list" data-toggle="tab">
                                    <i class="glyphicon glyphicon-list"></i> &nbsp; Godown List
                                    <div class="ripple-container"></div>
                                </a>
                            </li>

                            <li class="nav-item" ng-click="vm.ToggleTab(2)">
                                <a class="nav-link {{vm.tab2}}" href="#addproduct" data-toggle="tab">
                                    <i class="glyphicon glyphicon-list"></i> &nbsp; Setup Inventory
                                    <div class="ripple-container"></div>
                                </a>
                            </li>






                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="tab-content">

            <div class="tab-pane  {{vm.tab1}} " id="i_list">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header card-header-info card-header-icon">
                                <div class="card-icon">
                                    <i class="glyphicon glyphicon-list"></i>
                                </div>
                                <h4 class="card-title">
                                    Godown List
                                </h4>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover ">
                                        <thead>
                                            <tr>
                                                <th class="text-info">
                                                    Name
                                                </th>
                                                @*<th class="text-info">
                                                 IsActive
                                                </th>*@
                                                <th class="text-info">
                                                    Description
                                                </th>

                                                <th class="text-info">
                                                    Actions
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="i in    vm.GodownList ">

                                                <td class="hidden">
                                                    {{i.GodwonID}}
                                                </td>
                                                <td>
                                                    {{i.Name}}
                                                </td>
                                                @*<td>
                                                    <span class="glyphicon glyphicon-ok" ng-show="i.IsDeleted"></span>
                                                </td>*@
                                                <td>
                                                    {{i.Description}}
                                                </td>

                                                <td class="td-actions">
                                                    <button type="button" class="btn btn-just-icon btn-link " rel="tooltip" title="Edit Product" ng-click="vm.Edit(i)">
                                                        <i class="glyphicon glyphicon-pencil"></i>
                                                    </button>
                                                </td>

                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header card-header-info card-header-icon">
                                <div class="card-icon">
                                    <i class="glyphicon glyphicon-plus"></i>
                                </div>
                                <h4 class="card-title">Add / Update Inventory</h4>


                            </div>
                            <div class="card-body">
                                <form method="post" class="form-horizontal" id="InventoryForm" name="InventoryForm">


                                    <div class="row">
                                        <label class="col-lg-3 col-form-label">Inventory Name</label>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" required ng-model="vm.aGodown.Name" name="Name">
                                        </div>
                                    </div>

                                    <div class="row">
                                        <label class="col-lg-3 col-form-label">Description</label>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" ng-model="vm.aGodown.Description" name="Description">
                                        </div>
                                    </div>

                                    <div>
                                        <div class="col-lg-3 float-left ">
                                        </div>
                                        <div class="col-lg-9 float-lg-right ">
                                            <button type="button" class="btn btn-warning float-right" ng-click="vm.RemoveGodown()">
                                                <i class="glyphicon glyphicon-remove"> Delete </i>
                                            </button>
                                            <button type="button" class="btn btn-info float-left" ng-click="vm.AddUpdateGodown()">
                                                <i class="glyphicon glyphicon-floppy-save"> Save </i>
                                            </button>

                                        </div>


                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>



            <div class="tab-pane {{vm.tab2}}" id="addproduct">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header card-header-info card-header-icon">
                                <div class="card-icon">
                                    <i class="glyphicon glyphicon-plus"></i>
                                </div>
                                <h4 class="card-title">Add / Update Product</h4>


                            </div>
                            <div class="card-body">
                                <form method="post" class="form-horizontal" id="ProductForm" name="ProductForm">




                                    <div class="row">
                                        <label class="col-lg-3 col-form-label">Product Name</label>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" required ng-model="vm.aProduct.ProductName" name="ProductName">
                                        </div>
                                    </div>


                                    <div class="row">
                                        <label class="col-lg-3 col-form-label">Short Name</label>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" ng-model="vm.aProduct.ShortName" name="ShortName">
                                        </div>
                                    </div>

                                    <div class="row">
                                        <label class="col-lg-3 col-form-label">Category</label>
                                        <div class="col-lg-9 ">

                                            <select class="form-control" required ng-model="vm.aProduct.CategoryID" ng-options="c.CategoryID as c.CategoryName for c in vm.CategoryList" name="CategoryID">

                                                @* <option class=".custom-option" ng-repeat="x in  vm.CategoryList"  value={{x.CategoryID}}>{{x.CategoryName}} </option>*@

                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-lg-3 col-form-label">Unit Name</label>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" required ng-model="vm.aProduct.UnitName" name="UnitName">
                                        </div>
                                    </div>

                                    <div class="row">
                                        <label class="col-lg-3 col-form-label">Unit Size</label>
                                        <div class="col-lg-9">
                                            <input type="number" class="form-control" required ng-model="vm.aProduct.UnitSize" name="UnitSize">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-lg-3 col-form-label">Barcode</label>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" ng-model="vm.aProduct.Barcode" name="Barcode">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-lg-3 col-form-label">Brand</label>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" ng-model="vm.aProduct.Brand" name="Brand">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-lg-3 col-form-label">Model</label>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" ng-model="vm.aProduct.ModelName" name="ModelName">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-lg-3 col-form-label">Size</label>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" ng-model="vm.aProduct.Size" name="Size">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-lg-3 col-form-label">Color</label>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" ng-model="vm.aProduct.Color" name="Color">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-lg-3 col-form-label">Description</label>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" ng-model="vm.aProduct.Description" name="Description">
                                        </div>
                                    </div>
                                    <div>
                                        <div class="col-lg-3 float-left ">
                                        </div>
                                        <div class="col-lg-9 float-lg-right ">
                                            <button type="button" class="btn btn-warning float-right" ng-click="vm.RemoveProduct()">
                                                <i class="glyphicon glyphicon-remove"> Delete </i>
                                            </button>
                                            <button type="button" class="btn btn-info float-left" ng-click="vm.AddUpdateProduct()">
                                                <i class="glyphicon glyphicon-floppy-save"> Save </i>
                                            </button>

                                        </div>


                                    </div>



                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 ">
                        <div class="card">
                            <div class="card-header card-header-info card-header-icon">
                                <div class="card-icon">
                                    <i class="glyphicon glyphicon-plus"></i>
                                </div>
                                <h4 class="card-title">Create / Edit Category</h4>


                            </div>
                            <div class="card-body">
                                <form method="post" class="form-horizontal" id="CategoryForm" name="CategoryForm">




                                    <div class="row">
                                        <label class="col-lg-3 col-form-label">Category Name</label>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" required ng-model="vm.aCategory.CategoryName" name="CategoryName">
                                        </div>
                                    </div>



                                    <div>
                                        <div class="col-lg-3 float-left ">
                                        </div>
                                        <div class="col-lg-9 float-lg-right ">
                                            <button type="button" class="btn btn-warning float-right" ng-click="vm.RemoveCategory()">
                                                <i class="glyphicon glyphicon-remove"> Delete </i>
                                            </button>
                                            <button type="button" class="btn btn-info" ng-click="vm.AddUpdateCategory()">
                                                <i class="glyphicon glyphicon-floppy-save"> Save </i>
                                            </button>
                                        </div>
                                    </div>



                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>




        </div>
    </div>



</div>

