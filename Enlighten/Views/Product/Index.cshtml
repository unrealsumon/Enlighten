
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_MainLayout.cshtml";
}
<script src="~/Contents/scripts/Controllers/ProductController.js"></script>
<div class="row" ng-controller="ProductController as vm">
    <div class="col-lg-12 col-md-12">

        <div class="card card-plain">
            <div class="card-header card-header-tabs card-header-info  ">
                <div class="nav-tabs-navigation">
                    <div class="nav-tabs-wrapper">
                        <span class="nav-tabs-title"></span>
                        <ul class="nav nav-tabs" data-tabs="tabs">
                            <li class="nav-item">
                                <a class="nav-link active" href="#list" data-toggle="tab">
                                    <i class="glyphicon glyphicon-list"></i> &nbsp; Product List
                                    <div class="ripple-container"></div>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#edit" data-toggle="tab">
                                    <i class="glyphicon glyphicon-plus"></i> &nbsp; Create Product
                                    <div class="ripple-container"></div>
                                </a>
                            </li>
                        
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="list">
                        <div class="card">
                            <div class="card-header card-header-info card-header-icon">
                                <div class="card-icon">
                                    <i class="glyphicon glyphicon-list"></i>
                                </div>
                                <h4 class="card-title">Product List</h4>
                                <p class="category"><input type="text" class="form-control float-right" /></p>
                            
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover ">
                                        <thead>
                                            <tr>
                                                <th class="text-info">
                                                    Name
                                                </th>
                                                <th class="text-info">
                                                    Category
                                                </th>
                                                <th class="text-info">
                                                    Unit Name
                                                </th>
                                                <th class="text-info">
                                                    Barcode
                                                </th>
                                                <th class="text-info">
                                                    Brand
                                                </th>
                                                <th class="text-info">
                                                    IsDeleted
                                                </th>
                                                <th class="text-info">
                                                    Model
                                                </th>
                                                <th class="text-info">
                                                    Color
                                                </th>
                                                <th class="text-info">
                                                    Size
                                                </th>
                                                <th class="text-info">
                                                    Actions
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="p in    vm.ProductList">

                                                <td>
                                                    {{p.ProductName}}
                                                </td>
                                                <td>
                                                    {{p.CategoryName}}
                                                </td>
                                                <td>
                                                    {{p.UnitName}}
                                                </td>
                                                <td>
                                                    {{p.Barcode}}
                                                </td>
                                                <td>
                                                    {{p.Brand}}
                                                </td>
                                                <td>
                                                    {{p.IsDeleted}}
                                                </td>
                                                <td>
                                                    {{p.Model}}
                                                </td>
                                                <td>
                                                    {{p.Color}}
                                                </td>
                                                <td>
                                                    {{p.Size}}
                                                </td>
                                                <td></td>

                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="edit">
                        <table class="table">
                            <tbody>
                          
                              
                            </tbody>
                        </table>
                    </div>
              
                </div>
            </div>
        </div>

    </div>
    </div>

